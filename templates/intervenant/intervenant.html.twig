{% extends "base.html.twig" %}

{% block title %}gestion des intervenants
{% endblock %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2 px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Gestion des intervenants</h1>
{# <pre>
    {{ dump(intervenants_liste) }}
</pre> #}
		<h2>{{ sous_titre }}</h2>
		<ul>
			{% if (intervenants_liste is not empty) %}
				{% for i in intervenants_liste %}
					<li>{{ i.getNom()}},
						{{ i.getPrenom()}},
						<strong>{{ i.Specialiteprofessionnelle()}}</strong>
                        <a href="{{ path('intervenant_delete', {'value': i.getId()  } ) }}">Delete</a>
					</li>
				{% endfor %}
			{% else %}
				<p>Pas d'intervenant</p>

			{% endif %}

		</ul>

	</div>
{% endblock %}
